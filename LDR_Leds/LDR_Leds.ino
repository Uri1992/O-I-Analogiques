//******  Includes  ******************************************************


//******  Variables  *****************************************************

const int led = 9;
const int ldr = A0;
int val;

//*******  Setup  ********************************************************
void setup()
{
  pinMode(led, OUTPUT);
  pinMode(ldr, INPUT);
}

//******  Loop  **********************************************************
void loop ()
{
  val = analogRead(ldr);
  val = map(val, 0, 1023, 255, 0); 
  analogWrite(led, val);
}
  
  
